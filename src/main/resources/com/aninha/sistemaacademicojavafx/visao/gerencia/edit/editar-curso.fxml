<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="600.0" prefHeight="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aninha.sistemaacademicojavafx.visao.gerencia.edit.EditarCurso">
    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="60.0" prefWidth="300.0" prefHeight="280.0" spacing="15.0">
            <children>
                <Label text="Editar Curso" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <TextField fx:id="txtNomeCurso" promptText="Nome do Curso" />
                <TextField fx:id="txtDuracao" promptText="Duração (em semestres)" />
                <Button text="Salvar Alterações" onAction="#atualizaCursoAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button text="Cancelar" onAction="#cancelarAction" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
